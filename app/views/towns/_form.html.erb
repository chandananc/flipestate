<div class="container">
  <%= form_for(@town, :html => { multipart: true }) do |f| %>
  <% if @town.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@town.errors.count, "error") %> prohibited this town from being saved:</h2>

      <ul>
      <% @town.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :sqft %><br>
    <%= f.number_field :sqft,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rooms %><br>
    <%= f.number_field :rooms,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :buit_year %><br>
    <%= f.number_field :buit_year,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cost %><br>
    <%= f.text_field :cost,class: "form-control" %>
  </div>
 
 <%= f.fields_for :town_attachments do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "town_attachments[image][]" %>
     </div>
   <% end %>
 
 
 
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>