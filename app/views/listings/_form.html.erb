<%= form_for(@listing, :html => { multipart: true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sqft %><br>
    <%= f.text_field :sqft, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rooms %><br>
    <%= f.number_field :rooms, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :built_year %><br>
    <%= f.number_field :built_year, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cost %><br>
    <%= f.text_field :cost, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
 <%= f.fields_for :listings_attachments do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "listing_attachments[image][]" %>
     </div>
   <% end %>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
