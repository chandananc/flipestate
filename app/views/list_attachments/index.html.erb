<p id="notice"><%= notice %></p>

<h1>Listing List Attachments</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_attachments.each do |list_attachment| %>
      <tr>
        <td><%= list_attachment.list_id %></td>
        <td><%= list_attachment.image %></td>
        <td><%= link_to 'Show', list_attachment %></td>
        <td><%= link_to 'Edit', edit_list_attachment_path(list_attachment) %></td>
        <td><%= link_to 'Destroy', list_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

