<%= form_for(@list, :html => { :multipart => true }) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sqft %><br>
    <%= f.text_field :sqft, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rooms %><br>
    <%= f.number_field :rooms, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :category_id %>
  <%= f.select :category_id, Category.all.map { |f| [f.name,f.id] } %>
  </div>
  
  <div class="form-group">
    <%= f.label :built_year %><br>
    <%= f.number_field :built_year, class: "form-control" %>
  </div>
  <%= f.fields_for :list_attachments do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "list_attachments[image][]" %>
     </div>
   <% end %>
  <div class="form-group">
    <%= f.label :cost %><br>
    <%= f.text_field :cost, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
