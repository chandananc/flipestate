<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html =>  { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group">
   <%= f.label :name %><br />
   <%= f.text_field :name, autofocus: true, class: "form-control" %>
 </div>


 <div class="form-group">
   <%= f.label :username %><br />
   <%= f.text_field :username, autofocus: true,class: "form-control" %>
 </div>

  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

 <div class="form-group">
   <%= f.label :email %><br />
   <%= f.email_field :email, autofocus: true,class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :password %>
   <% if @minimum_password_length %>
   <em>(<%= @minimum_password_length %> characters minimum)</em>
   <% end %><br />
   <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
 </div>

<h2>Basic Information</h2>

 <div class="form-group">
   <%= f.label :gender%><br />
   <%= f.text_field :gender, autofocus: true, class: "form-control" %>
 </div>


 <div class="form-group">
   <%= f.label :birth_date %><br />
   <%= f.text_field :birth_date, autofocus: true,class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :about_me %><br />
   <%= f.text_field :about_me, autofocus: true,class: "form-control" %>
 </div>

   <h2>Contact Information</h2>
   
   <div class="form-group">
   <%= f.label :state %><br />
   <%= f.text_field :state, autofocus: true,class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :city_town %><br />
   <%= f.text_field :city_town, autofocus: true,class: "form-control" %>
 </div>
   
   <div class="form-group">
       <%= f.label :country %><br />
       <%= f.text_field :country, autofocus: true,class: "form-control" %>
 </div>
 

  <div class="actions">
    <%= f.submit "Register" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>



