<p id="notice"><%= notice %></p>

<h1>Listing Town Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Town</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @town_attachments.each do |town_attachment| %>
      <tr>
        <td><%= town_attachment.town_id %></td>
        <td><%= town_attachment.image %></td>
        <td><%= link_to 'Show', town_attachment %></td>
        <td><%= link_to 'Edit', edit_town_attachment_path(town_attachment) %></td>
        <td><%= link_to 'Destroy', town_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

